<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MVVM_SQLSERVER.Views.Auth.LoginPage"
             xmlns:viewmodel="clr-namespace:MVVM_SQLSERVER.ViewModels.Auth"
             
             Title="{Binding Title}">

    <VerticalStackLayout Padding="20" Spacing="15">
        <Entry Placeholder="Email" Text="{Binding Email}"/>
        <Entry Placeholder="Contraseña" Text="{Binding Password}" IsPassword="True"/>
        <Button Text="Iniciar Sesión" Command="{Binding LoginCommand}"/>
    </VerticalStackLayout>
</ContentPage>